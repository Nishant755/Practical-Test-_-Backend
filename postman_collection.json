{
    "info": {
        "_postman_id": "habit-tracker-api",
        "name": "Habit Tracker API",
        "description": "Collection for the Habit Tracker Node.js API",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Auth",
            "item": [
                {
                    "name": "Signup",
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"email\": \"test@example.com\",\n    \"password\": \"password123\",\n    \"name\": \"Test User\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{baseUrl}}/auth/signup",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "auth",
                                "signup"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Login",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "var jsonData = pm.response.json();",
                                    "pm.collectionVariables.set(\"token\", jsonData.token);"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"email\": \"test@example.com\",\n    \"password\": \"password123\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{baseUrl}}/auth/login",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "auth",
                                "login"
                            ]
                        }
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "Habits",
            "item": [
                {
                    "name": "Get All Habits",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/habits",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "habits"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Create Habit",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}",
                                "type": "text"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"name\": \"Drink Water\",\n    \"description\": \"Drink 8 glasses of water daily\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{baseUrl}}/habits",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "habits"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Complete Habit",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/habits/:id/complete",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "habits",
                                ":id",
                                "complete"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "HABIT_ID_HERE"
                                }
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Check Habit Status",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/habits/:id/status?date=2025-12-11",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "habits",
                                ":id",
                                "status"
                            ],
                            "query": [
                                {
                                    "key": "date",
                                    "value": "2025-12-11"
                                }
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "HABIT_ID_HERE"
                                }
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Get Habit History",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/habits/:id/history",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "habits",
                                ":id",
                                "history"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "HABIT_ID_HERE"
                                }
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Delete Habit",
                    "request": {
                        "method": "DELETE",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/habits/:id",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "habits",
                                ":id"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "HABIT_ID_HERE"
                                }
                            ]
                        }
                    },
                    "response": []
                }
            ]
        }
    ],
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:3000",
            "type": "string"
        },
        {
            "key": "token",
            "value": "",
            "type": "string"
        }
    ]
}